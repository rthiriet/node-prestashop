- var baseUrl = 'http://superstar.f6.de/prestashop/';

mixin imgurl(id,link_rewrite,size,productid)
    //- var image = getPictures(productid, id)
    -   if (typeof(size)!='undefined' && size != '')
        size = '-' + size
    -   else
        size = ''
    p
        //-img(src=image)
        img(src = baseUrl + id + size + '/' + link_rewrite + '.jpg')

div#fbbody
    div#header
        h1 Welcome to the Full6Berlin social shop
    p You'll find below the list of available products
        each items in products
            - var linkRewrite = items.product.link_rewrite.language['#']
            - var productid=items.product.id
            h2 !{items.product.name.language['#']}
            a(href='#product'+productid).nyroModal
                mixin imgurl(items.product.id_default_image['#'],linkRewrite, 'medium')
            h3 !{items.product.manufacturer_name['#']}
            !{items.product.description_short.language['#']}
            div(id='product'+productid).hidden
                !{items.product.description.language['#']}
                ul
                    each image in items.product.associations.images.image
                        li
                            a(href='/images/'+productid+'/'+image.id+'/').nyroModal
                                mixin imgurl(image.id,linkRewrite,'medium', productid)
            div.fb-like(data-href='http://apps.facebook.com/fsixdetestlocal/'+productid, data-send='true', data-width='450', data-show_faces='true')